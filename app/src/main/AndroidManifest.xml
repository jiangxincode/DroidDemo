<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.jiangxin.easymarry">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".broadcastreceiver.NetStatReceiver">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <!-- 由于PowerManager的限制，SCREEN_ON和SCREEN_OFF两个action必须要通过代码注册的方式才能使用，这里使用USER_PRESENT捕获解锁广播 -->
        <receiver android:name=".broadcastreceiver.ScreenOnReceiver">
            <intent-filter android:priority="90000">
                <action android:name="android.intent.action.USER_PRESENT" />
            </intent-filter>
        </receiver>

        <service
            android:name=".service.MessengerService"
            android:process=":remote" />
        <service
            android:name=".activity.TrackerService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>

            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>

        <activity
            android:name=".activity.MessengerActivity"
            android:label="@string/title_activity_messenger">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <!-- ListView 下拉 -->
        <activity
            android:name=".activity.listview.ListViewActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />

        <!-- ListView 侧滑 -->
        <activity
            android:name=".activity.listview.SlideListViewActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />

        <!-- GridView 下拉、收缩 -->
        <activity
            android:name=".activity.listview.GridViewActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activity.listview.ExpandableListActivity"
            android:screenOrientation="unspecified"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activity.listview.ViewFlipperActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".activity.DialogActivity" />
        <activity android:name=".activity.BlurActivity" />
        <activity android:name=".activity.RippleActivity" />
        <activity android:name=".activity.DecorViewActivity" />
        <activity android:name=".activity.ForbidScreenShotActivity" />
        <activity
            android:name=".activity.AppListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.SignaturesActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.VariousNotificationActivity" />
        <!-- 只有当这个Activity是处于任务栈根部的时候android:excludeFromRecents="true"才会起作用，这个属性通常只于android.intent.category.LAUNCHER或者与singleTask/singleInstance一起使用 -->
        <activity
            android:name=".activity.ScaleTextActivity"
            android:excludeFromRecents="true"
            android:launchMode="singleTask"
            android:taskAffinity=".testLaunchMode" />
        <activity android:name=".activity.FriendsListActivity" />
        <activity android:name=".activity.SpannableStringActivity" />
        <activity android:name=".activity.QuickSearchBoxActivity">
            <intent-filter>
                <action android:name="edu.jiangxin.easymarry.action.Search" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <provider
            android:name=".provider.QuickSearchBoxProvider"
            android:authorities="edu.jiangxin.easymarry.SEARCH_AUTHORITY"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".activity.ShowInfoActivity" />
        <activity android:name=".activity.MessageActivity" />
        <activity android:name=".activity.ImageViewActivity" />
        <activity android:name=".activity.AudioFxOscillogramActivity" />
        <activity android:name=".activity.AudioFxHistogramActivity" />
        <activity android:name=".activity.NetMusicActivity" />
        <activity android:name=".activity.VideoViewActivity" />
        <activity android:name=".activity.JNIActivity" />
        <activity android:name=".activity.ActivityTrackerActivity" />
        <activity android:name=".activity.RingtoneSettingActivity"></activity>
    </application>

</manifest>