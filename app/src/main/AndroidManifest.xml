<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="edu.jiangxin.droiddemo">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.WRITE_CONTACTS"/>
    <uses-permission android:name="android.permission.WRITE_CALL_LOG"/>
    <uses-permission android:name="android.permission.READ_CALL_LOG"/>
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission
        android:name="android.permission.WRITE_SETTINGS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission
        android:name="android.permission.PACKAGE_USAGE_STATS"
        tools:ignore="ProtectedPermissions" />

    <application
        android:name="edu.jiangxin.droiddemo.ApplicationExt"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="edu.jiangxin.droiddemo.activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name="edu.jiangxin.droiddemo.broadcastreceiver.NetStatReceiver">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <!-- 由于PowerManager的限制，SCREEN_ON和SCREEN_OFF两个action必须要通过代码注册的方式才能使用，这里使用USER_PRESENT捕获解锁广播 -->
        <receiver android:name="edu.jiangxin.droiddemo.broadcastreceiver.ScreenOnReceiver">
            <intent-filter android:priority="90000">
                <action android:name="android.intent.action.USER_PRESENT" />
            </intent-filter>
        </receiver>

        <service
            android:name="edu.jiangxin.droiddemo.service.MessengerService"
            android:process=":remote" />
        <service
            android:name="edu.jiangxin.droiddemo.activity.TrackerService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>

            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>

        <activity
            android:name="edu.jiangxin.droiddemo.activity.MessengerActivity"
            android:label="@string/title_activity_messenger">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <!-- ListView 下拉 -->
        <activity
            android:name="edu.jiangxin.droiddemo.activity.listview.ListViewActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />

        <!-- ListView 侧滑 -->
        <activity
            android:name="edu.jiangxin.droiddemo.activity.listview.SlideListViewActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />

        <!-- GridView 下拉、收缩 -->
        <activity
            android:name="edu.jiangxin.droiddemo.activity.listview.GridViewActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="edu.jiangxin.droiddemo.activity.listview.ExpandableListActivity"
            android:screenOrientation="unspecified"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="edu.jiangxin.droiddemo.activity.listview.ViewFlipperActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name="edu.jiangxin.droiddemo.activity.DialogActivity" />
        <activity android:name="edu.jiangxin.droiddemo.activity.BlurActivity" />
        <activity android:name="edu.jiangxin.droiddemo.activity.RippleActivity" />
        <activity android:name="edu.jiangxin.droiddemo.activity.DecorViewActivity" />
        <activity android:name="edu.jiangxin.droiddemo.activity.ForbidScreenShotActivity" />
        <activity
            android:name="edu.jiangxin.droiddemo.activity.AppListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="edu.jiangxin.droiddemo.activity.SignaturesActivity"
            android:screenOrientation="portrait" />
        <activity android:name="edu.jiangxin.droiddemo.activity.VariousNotificationActivity" />
        <!-- 只有当这个Activity是处于任务栈根部的时候android:excludeFromRecents="true"才会起作用，这个属性通常只于android.intent.category.LAUNCHER或者与singleTask/singleInstance一起使用 -->
        <activity
            android:name="edu.jiangxin.droiddemo.activity.ScaleTextActivity"
            android:excludeFromRecents="true"
            android:launchMode="singleTask"
            android:taskAffinity=".testLaunchMode" />
        <activity android:name="edu.jiangxin.droiddemo.activity.FriendsListActivity" />
        <activity android:name="edu.jiangxin.droiddemo.activity.SpannableStringActivity" />
        <activity android:name="edu.jiangxin.droiddemo.activity.QuickSearchBoxActivity">
            <intent-filter>
                <action android:name="edu.jiangxin.droiddemo.action.Search" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <provider
            android:name="edu.jiangxin.droiddemo.provider.QuickSearchBoxProvider"
            android:authorities="edu.jiangxin.droiddemo.SEARCH_AUTHORITY"
            android:enabled="true"
            android:exported="true" />

        <activity android:name="edu.jiangxin.droiddemo.quickshow.activity.ShowInfoActivity">
            <intent-filter>
                <action android:name="edu.jiangxin.droiddemo.action.SHOWINFO" />

                <category android:name="android.intent.category.SHOWINFO" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="edu.jiangxin.droiddemo.activity.MessageActivity" />
        <activity android:name="edu.jiangxin.droiddemo.activity.ImageViewActivity" />
        <activity android:name="edu.jiangxin.droiddemo.activity.AudioFxOscillogramActivity" />
        <activity android:name="edu.jiangxin.droiddemo.activity.AudioFxHistogramActivity" />
        <activity android:name="edu.jiangxin.droiddemo.activity.NetMusicActivity" />
        <activity android:name="edu.jiangxin.droiddemo.activity.VideoViewActivity" />
        <activity android:name="edu.jiangxin.droiddemo.activity.JNIActivity" />
        <activity android:name="edu.jiangxin.droiddemo.activity.ActivityTrackerActivity" />
        <activity android:name="edu.jiangxin.droiddemo.activity.RingtoneSettingActivity" />
        <activity android:name="edu.jiangxin.droiddemo.activity.RingtoneSetting1Activity" />
        <activity android:name="edu.jiangxin.droiddemo.activity.SettingActivity" />
        <activity android:name="edu.jiangxin.droiddemo.activity.ThemeActivity" />
        <activity android:name="edu.jiangxin.droiddemo.activity.SpinnerActivity" />
        <activity android:name="edu.jiangxin.droiddemo.fragment.FragmentActivity" />
        <activity android:name="edu.jiangxin.droiddemo.fragment.FragmentTest1Activity" />
        <activity android:name="edu.jiangxin.droiddemo.saf.SAFActivity" />
        <activity android:name="edu.jiangxin.droiddemo.mediastore.MediaStoreActivity"></activity>
        <activity android:name="edu.jiangxin.droiddemo.mediastore.MyPhoto"></activity>
        <activity android:name="edu.jiangxin.droiddemo.mediastore.MyMusic"></activity>
        <activity android:name="edu.jiangxin.droiddemo.mediastore.MyMovie"></activity>
        <activity android:name="edu.jiangxin.droiddemo.activity.ThreadDemoActivity" />
        <activity android:name="edu.jiangxin.droiddemo.activity.LoaderDemoActivity"></activity>
    </application>

</manifest>