<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorShallowGray"
    android:orientation="vertical">

    <RelativeLayout style="@style/rt_title_view">

        <LinearLayout
            android:id="@+id/lt_grid_view_title_menu"
            style="@style/ll_title_view1"
            android:layout_alignParentLeft="true">

            <ImageView
                android:id="@+id/iv_grid_view_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/gv_down"
                android:contentDescription="@string/title_left" />
        </LinearLayout>

        <TextView
            style="@style/tv_title_name"
            android:text="水浒传" />
    </RelativeLayout>

    <GridView
        android:id="@+id/gv_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:numColumns="4"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp"
        android:visibility="visible" />

</LinearLayout>