<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.jiangxin.droiddemo.NotificationsFragment"
    android:paddingTop="?android:attr/actionBarSize">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="vertical"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:scrollbarStyle="outsideInset"
            android:scrollbars="vertical">

            <Button
                android:id="@+id/btnNoneImportance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IMPORTANCE_NONE" />

            <Button
                android:id="@+id/btnMinImportance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IMPORTANCE_MIN" />

            <Button
                android:id="@+id/btnLowImportance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IMPORTANCE_LOW" />

            <Button
                android:id="@+id/btnDefaultImportance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IMPORTANCE_DEFAULT" />

            <Button
                android:id="@+id/btnHighImportance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IMPORTANCE_HIGH" />

            <Button
                android:id="@+id/btnEnableVibrate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ENABLE_VIBRATE" />

            <Button
                android:id="@+id/btnDisableVibrate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DISABLE_VIBRATE" />

            <Button
                android:id="@+id/btnOthers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Others" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>