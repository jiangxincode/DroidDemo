<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/Result_Combination_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Result_Combination_TypeOne_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="等额本息"
            android:textSize="18sp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/Result_Combination_TypeTwo_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="等额本金"
            android:textColor="#000000"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_weight="1"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/Result_Combination_Cursor_ImageView"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:src="@drawable/cursor"
        android:scaleType="matrix"
        android:layout_below="@+id/Result_Combination_Layout" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/Result_Combination_Viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/Result_Combination_Layout">
    </androidx.viewpager.widget.ViewPager>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
    </LinearLayout>

</RelativeLayout>