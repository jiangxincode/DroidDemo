<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="titleBarColor" format="color" />
    <attr name="textColor" format="color" />
    <attr name="textViewBackground" format="color" />
    <attr name="imageValue" format="reference"/>

    <!--圆角LinearLayout-->
    <declare-styleable name="CornersLinearLayout">
        <attr name="corner" format="dimension" />
        <attr name="leftTopCorner" format="dimension" />
        <attr name="rightTopCorner" format="dimension" />
        <attr name="leftBottomCorner" format="dimension" />
        <attr name="rightBottomCorner" format="dimension" />
    </declare-styleable>
    
    <declare-styleable name="RatioLayout">
        <attr name="picRatio" format="float" />
        <attr name="relative">
            <enum name="width" value="0" />
            <enum name="height" value="1" />
        </attr>
    </declare-styleable>

</resources>